{
    "name": "ideabox",
    "version": "1.0.0",
    "description": "Ideabox is a simple application that allows users to create a pool of ideas and promote collaboration.",
    "main": "index.js",
    "scripts": {
        "heroku-prebuild": "npm install --only=dev",
        "test": "NODE_ENV=test nyc --reporter=text --reporter=html --reporter=lcov mocha server/test --timeout 40000 --exit --compilers js:babel-register && npm run coverage-report",
        "start:dev": "nodemon --exec babel-node ./server/server.js",
        "start": "NODE_ENV=production nodemon --exec babel-node ./server/server.js",
        "heroku-postbuild": "webpack --config ./webpack.prod.js",
        "start:prod": "npm run heroku-postbuild && npm start",
        "coverage-report": "cat ./coverage/lcov.info | coveralls",
        "end": "nightwatch",
        "e2e-setup": "selenium-standalone install"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/QUDUSKUNLE/Ideabox.git"
    },
    "author": "Qudus YEKEEN",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/QUDUSKUNLE/Ideabox/issues"
    },
    "homepage": "https://github.com/QUDUSKUNLE/Ideabox#readme",
    "jest": {
        "roots": [
            "<rootDir>/client/test"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx"
        ],
        "globals": {
            "$": true,
            "Materialize": true
        },
        "unmockedModulePathPatterns": [
            "react"
        ],
        "collectCoverage": true,
        "setupFiles": [
            "<rootDir>/client/mock/LocalStorageMock",
            "<rootDir>/test-env.js",
            "<rootDir>/setupTest.js"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/server/test/"
        ],
        "coveragePathIgnorePatterns": [
            "localStorage"
        ]
    },
    "devDependencies": {
        "assert": "^1.4.1",
        "babel-plugin-add-module-exports": "^0.2.1",
        "babel-preset-stage-2": "^6.24.1",
        "cat": "^0.2.0",
        "chai": "^4.1.2",
        "chai-http": "^3.0.0",
        "coveralls": "^3.0.0",
        "enzyme-adapter-react-15": "^1.0.5",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.5.1",
        "faker": "^4.1.0",
        "istanbul": "^0.4.5",
        "mocha": "^4.0.1",
        "mocha-lcov-reporter": "^1.3.0",
        "moxios": "^0.4.0",
        "nyc": "^11.3.0",
        "selenium-standalone": "^6.12.0",
        "react-dom": "^16.2.0",
        "react-test-renderer": "^16.2.0",
        "should": "^13.1.3"
    },
    "dependencies": {
        "axios": "^0.17.1",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-register": "^6.26.0",
        "bcrypt": "^1.0.3",
        "body-parser": "^1.18.2",
        "capitalize": "^1.0.0",
        "clean-webpack-plugin": "^0.1.17",
        "colors": "^1.1.2",
        "compression": "^1.7.1",
        "crypto": "^1.0.1",
        "css-loader": "^0.28.7",
        "dotenv": "^4.0.0",
        "dotenv-webpack": "^1.5.4",
        "enzyme": "^3.2.0",
        "enzyme-to-json": "^3.3.0",
        "express": "^4.16.2",
        "express-validator": "^4.3.0",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.5",
        "flux": "^3.1.3",
        "font-awesome": "^4.7.0",
        "html-webpack-plugin": "^2.30.1",
        "http": "0.0.0",
        "img-loader": "^2.0.0",
        "jest": "^20.0.4",
        "jquery": "^3.2.1",
        "jsonwebtoken": "^8.1.0",
        "lodash": "^4.17.4",
        "markdown-to-jsx": "^6.2.1",
        "materialize-css": "^0.100.2",
        "moment": "^2.19.4",
        "mongoose": "^4.10.8",
        "morgan": "^1.9.0",
        "node-sass": "^4.7.2",
        "nodemailer": "^4.4.0",
        "nodemon": "^1.12.1",
        "prop-types": "^15.6.0",
        "raf": "^3.4.0",
        "react": "^16.0.0",
        "react-mde": "^2.3.2",
        "react-paginate": "^5.0.0",
        "react-router-dom": "^4.2.2",
        "react-social": "^1.10.0",
        "sass-loader": "^6.0.6",
        "showdown": "^1.8.5",
        "sinon": "^3.2.1",
        "style-loader": "^0.19.0",
        "sweetalert2": "^7.0.9",
        "uglifyjs-webpack-plugin": "^1.1.1",
        "validator": "^9.1.2",
        "webpack": "^3.8.1",
        "webpack-dev-middleware": "^1.12.2",
        "webpack-hot-middleware": "^2.21.0",
        "webpack-jquery-ui": "^1.0.0"
    }
}